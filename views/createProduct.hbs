<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create a new product</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Tiem gac xep</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/create">Create a new Product!</a></li>
        <li><a href="/viewAll">View Products</a></li>
      </ul>
    </div>
  </nav>
  <h1>Create a new product</h1>
  <div class="table-responsive" style="margin: 20px;">
    <form action="/createProduct" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="txtName" />
      </div>
      <div class="form-group">
        <label for="sel1">Category:</label>
        <select class="form-control" id="category" name="txtCategory">
          {{#each category}}
          <option value="{{name}}">{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="text" name="txtPrice" id="price" class="form-control" />
      </div>
      <div class="form-group">
        <label for="picture">Picture URL</label>
        <input type="text" name="txtPicture" id="picture" ] class="form-control" />
      </div>
      <input type="submit" value="Create Product" class="btn btn-default" />
    </form>
  </div>
</body>

</html>