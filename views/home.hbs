<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home</title>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Tiem gac xep</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/create">Create a new Product!</a></li>
        <li><a href="/viewAll">View Products</a></li>
      </ul>
    </div>
  </nav>
  <div style="width:700px;height:500px;margin:auto">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      {{!--
      <!-- Indicators -->
      <ol class="carousel-indicators">
        {{#each products}}
        {{#if @first}}
        <li data-target="#myCarousel" data-slide-to="{{@index}}" class="active"></li>
        {{/if}}
        {{/each}}
      </ol> --}}

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        {{#each products}}
        {{#if @first}}
        <div class="item active">
          <img class="d-block" src="{{picURL}}" style="width: 100%;height:100%" alt="name">
        </div>
        {{else}}
        <div class="item">
          <img class="d-block" src="{{picURL}}" style="width: 100%;height:100%" alt="name">
        </div>
        {{/if}}
        {{/each}}
      </div>
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <h1>Welcome to Tiem Gac Xep!</h1>
</body>

</html>